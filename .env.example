# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Vector Database Configuration
VECTOR_DB_TYPE=chromadb  # chromadb or weaviate
CHROMA_PERSIST_DIR=./chroma_data
WEAVIATE_URL=http://localhost:8080

# Session Store Configuration
SESSION_STORE_TYPE=redis  # redis or mongodb
REDIS_URL=redis://localhost:6379
MONGODB_URL=mongodb://localhost:27017

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_KEY=your_api_key_here

# LLM Configuration
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.0
FAST_LLM_MODEL=gpt-3.5-turbo

# Embedding Configuration
EMBEDDING_MODEL=voyage-law-2  # or text-embedding-ada-002

# Retrieval Configuration
TOP_K_CHUNKS=10
RATIONALE_THRESHOLD=0.7

# Scraper Configuration
SCRAPER_RATE_LIMIT=1.0  # seconds between requests
SCRAPER_USER_AGENT=LegalImmigrationRAG/1.0

# Logging
LOG_LEVEL=INFO
